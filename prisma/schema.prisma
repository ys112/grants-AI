// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Better Auth required models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // GrantSync custom fields
  role          String    @default("partner") // admin | partner | viewer
  organizationId String?
  interests     String?   // JSON array: ["Arts", "Healthcare", "Seniors"]
  targetPopulation String?  // @deprecated - kept for migration compatibility
  minFunding    Int?
  orgDescription String?   // Organization description for grant matching
  
  sessions      Session[]
  accounts      Account[]
  trackedGrants TrackedGrant[]
  projects      Project[]
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

// GrantSync specific models
model Grant {
  id          String   @id @default(cuid())
  title       String
  agency      String
  amount      String   // e.g., "$50,000 - $100,000"
  amountMin   Int?     // For filtering (parsed from amount)
  amountMax   Int?     // For filtering (parsed from amount)
  deadline    DateTime? // Null for open/rolling grants
  description String   @db.Text
  url         String?
  tags        String   // JSON array: ["Arts", "Seniors", "Healthcare"]
  
  // Eligibility fields (from scraped data)
  status      String   @default("green") // green = open, red = closed
  applicableTo String  @default("[\"organisation\"]") // JSON: ["individual", "organisation"]
  
  // Enhanced fields for filtering
  issueArea   String?  // Primary issue area: arts, healthcare, seniors, etc.
  eligibilityCriteria String? @db.Text // JSON array of eligibility requirements
  kpis        String?  @db.Text // JSON array of expected KPIs/outcomes
  grantDuration Int?   // Duration in months
  
  // Parsed HTML sections (for semantic matching)
  objectives    String? @db.Text // What the grant supports (from guideline_html)
  whoCanApply   String? @db.Text // Eligibility section
  whenToApply   String? @db.Text // Timeline/deadline info
  fundingInfo   String? @db.Text // How much funding available
  requiredDocs  String? @db.Text // JSON: required documents list (from template_html)
  deliverables  String? // JSON array from API
  
  // Raw HTML for reference
  guidelineHtml String? @db.Text
  templateHtml  String? @db.Text
  
  // Contact info
  email         String?
  phone         String?
  address       String?
  
  // Scraping metadata
  sourceId    String?  @unique // Unique ID from source for deduplication
  scrapedAt   DateTime? // When this grant was last scraped
  
  // Section embeddings (pgvector - 3072 dimensions for Gemini gemini-embedding-001)
  objectivesEmbed    Unsupported("vector(3072)")?  // Embedding for objectives/purpose
  eligibilityEmbed   Unsupported("vector(3072)")?  // Embedding for whoCanApply
  fundingEmbed       Unsupported("vector(3072)")?  // Embedding for fundingInfo
  deliverablesEmbed  Unsupported("vector(3072)")?  // Embedding for deliverables/requiredDocs
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  trackedBy   TrackedGrant[]
  recommendations ProjectRecommendation[]
}

model TrackedGrant {
  id        String   @id @default(cuid())
  userId    String
  grantId   String
  status    String   @default("new") // new | reviewing | applied | rejected
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  grant     Grant    @relation(fields: [grantId], references: [id], onDelete: Cascade)
  
  @@unique([userId, grantId])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  parentId  String?  // For Tsao parent-child hierarchy
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Project-based grant recommendation models
model Project {
  id                String   @id @default(cuid())
  userId            String
  organizationId    String?
  
  // Core info
  name              String
  description       String   @db.Text
  
  // Matching criteria (aligned with grant fields)
  targetPopulation  String   // seniors, youth, disabled, low-income, general
  focusAreas        String   // JSON: ["Healthcare", "Social Service", "Community"]
  deliverables      String?  // JSON: ["Classes/Seminar/Workshop", "Research"]
  
  // Funding parameters
  fundingMin        Int?     // Minimum funding needed
  fundingMax        Int?     // Maximum funding needed
  
  // Timeline
  startDate         DateTime?
  endDate           DateTime?
  duration          Int?     // Duration in months
  
  // Additional context for semantic matching
  expectedOutcomes  String?  @db.Text // KPIs, goals, expected impact
  
  // Status & tracking
  status            String   @default("planning") // planning, active, funded, completed
  priority          String   @default("medium")   // low, medium, high
  
  // Section embeddings (pgvector - 3072 dimensions for Gemini gemini-embedding-001)
  goalEmbed         Unsupported("vector(3072)")?  // Embedding for description/goal
  populationEmbed   Unsupported("vector(3072)")?  // Embedding for targetPopulation
  outcomesEmbed     Unsupported("vector(3072)")?  // Embedding for expectedOutcomes
  deliverablesEmbed Unsupported("vector(3072)")?  // Embedding for deliverables
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recommendations   ProjectRecommendation[]
}

model ProjectRecommendation {
  id            String   @id @default(cuid())
  projectId     String
  grantId       String
  
  // Scoring (0-100 scale)
  overallScore  Float    // Composite weighted score
  categoryScore Float?   // Focus areas match score
  fundingScore  Float?   // Funding range overlap score
  semanticScore Float?   // Description similarity score
  deadlineScore Float?   // Deadline urgency score
  
  // LLM Scores (0-100 scale)
  llmPurpose    Float?   // LLM purpose alignment score
  llmEligibility Float?  // LLM eligibility fit score
  llmImpact     Float?   // LLM impact relevance score
  llmOverall    Float?   // LLM overall score
  
  // Status tracking
  status        String   @default("new") // new, reviewed, applied, dismissed
  
  // LLM-generated explanation
  matchReason   String?  @db.Text
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  grant         Grant    @relation(fields: [grantId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, grantId])
}
